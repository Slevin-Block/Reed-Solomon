{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./src",
    "target": "ES2015",
    "noEmitOnError": true,
    "module": "commonjs",
    "strict": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
  },
  "include": [
    "src/**/*.ts" // Incluez tous les fichiers TypeScript dans le répertoire src et ses sous-répertoires
  ],
  "exclude": [
    "node_modules"
  ]
}